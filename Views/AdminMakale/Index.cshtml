@using PagedList
@using PagedList.Mvc
@model IEnumerable<MvcBlog.Models.Makale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


  <h3>MAKALELER</h3>


    <table class="table">
        <tr>
            
            <th>

            </th>
            <th>

            </th>

            <th>
                @Html.Label("Kategori Adı")
            </th>
            <th>
                @Html.Label("Başlık")
            </th>
            <th>
                @Html.Label("İçeriği")
            </th>

            <th>
                @Html.Label("Foto")
            </th>
            <th>
                @Html.Label("Tarih")
            </th>


            <th>
                @Html.Label("İşlemler") |
                @Html.ActionLink("+Yeni Makale", "Create")
            </th>
        </tr>



        @foreach (var item in Model)
        {

            <tr>
                <td></td>
                <td></td>

                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KategoriAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Icerik)
                </td>
                <td>
                    <img width="75" src="@item.Foto" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>

                <td>

                    @Html.ActionLink("Düzenle", "Edit", new { id = item.MakaleId }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.MakaleId })
                </td>
            </tr>
        }

    </table>
